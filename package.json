{
  "name": "@olton/string",
  "version": "0.4.3",
  "description": "String is a minimalist JavaScript library for manipulating with strings for node and modern browsers with a comfortable modern API.",
  "main": "dist/string.js",
  "type": "module",
  "scripts": {
    "prebuild": "shx rm -rf dist/* lib/*",
    "build": "rollup --config",
    "test": "npm run build & jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olton/string.git"
  },
  "keywords": [
    "string",
    "javascript",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/olton/string/issues"
  },
  "author": "Serhii Pimenov <serhii@pimenov.com.ua> (https://pimenov.com.ua/)",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "not ie >= 0",
    "not ie_mob >= 0",
    "not op_mini all",
    "not op_mob >= 0",
    "not kaios >= 0",
    "not samsung >= 0",
    "not baidu >= 0",
    "not bb >= 0",
    "maintained node versions"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "chai": "^4.3.10",
    "jest": "^29.7.0",
    "rollup": "^4.9.0",
    "shx": "^0.3.4"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup-plugin-progress": "^1.1.2"
  }
}
